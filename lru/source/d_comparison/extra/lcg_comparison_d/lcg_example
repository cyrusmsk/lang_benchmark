	static immutable long M = cast(long) 1 << 31;
    static immutable long A = 1103515245;
    static immutable long C = 12345;
    long s = 42;
    s = (A * s + C) % M;
    writeln(s);
    s = (A * s + C) % M;
    writeln(s);
    
    alias CPP11LCG = LinearCongruentialEngine!(uint, A, C, M);
    auto rnd = CPP11LCG(42);
    auto n = rnd.front; // same for each run
    writeln(n);
    rnd.popFront();
    n = rnd.front;
    writeln(n);
